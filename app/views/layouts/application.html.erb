<!DOCTYPE html>
<html>
  <head>
    <title>OpenID Connect IdP for Security Camp 2016</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div id="wrapper">
      <h1>IdP for SecCamp 2016</h1>
      <section id="main">
        <%= yield %>
      </section>
      <footer>
        <% if authenticated? %>
          <%= form_tag session_path, method: :delete do %>
            <p><%= submit_tag :logout %></p>
          <% end %>
        <% end %>
        <small>&copy; Nov</small>
      </footer>
    </div>
  </body>
</html>
